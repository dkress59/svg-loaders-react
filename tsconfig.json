{
	"compilerOptions": {
		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"jsx": "react",
		"lib": ["es5", "dom"],
		"moduleResolution": "node",
		"module": "commonjs",
		"resolveJsonModule": true,
		"strict": true,
		"noImplicitAny": false,
		"target": "es5",
		"baseUrl": ".",
		"outDir": "./dist/"
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"test/setupTests.ts"
	]
}